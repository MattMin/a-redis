<idea-plugin>
    <id>com.mzyupc.a-redis</id>
    <name>A-Redis</name>
    <vendor email="mzyupc@163.com" url="https://github.com/MattMin">MattMin</vendor>

    <description><![CDATA[
    A simple and open source IDEA Redis plugin </br>
    <a href="https://github.com/MattMin/a-redis">Github</a>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="2020.1"/>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.mzyupc.aredis.factory.ARedisToolWindowFactory" id="A-Redis" secondary="false"
                    icon="AllIcons.Debugger.Db_db_object" anchor="right"/>
        <fileEditorProvider implementation="com.mzyupc.aredis.view.editor.ARedisEditorProvider"/>
        <projectService serviceImplementation="com.mzyupc.aredis.view.editor.ARedisFileSystem"/>
    </extensions>
</idea-plugin>
